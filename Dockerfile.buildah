FROM quay.io/buildah/stable
COPY infrastructure/hashicorpvault/tls.crt /etc/pki/ca-trust/source/anchors/minikube-ingress.crt

RUN update-ca-trust && \
dnf makecache && \
dnf install -y podman skopeo gnupg2 && \
dnf clean all && \
mkdir /app

COPY buildah-image-entrypoint.sh /app/buildah-image-entrypoint.sh
RUN chmod a+x /app/buildah-image-entrypoint.sh
CMD ["/app/buildah-image-entrypoint.sh"]
